{
  "name": "@rolster/react-components",
  "version": "1.0.0",
  "type": "module",
  "description": "Package containing UI components for React Project.",
  "module": "dist/esm/index.js",
  "main": "dist/cjs/lib.cjs.js",
  "unpkg": "dist/es/lib.js",
  "types": "dist/esm/index.d.ts",
  "author": "Rolster Technology <rolster.developments@gmail.com>",
  "license": "MIT",
  "files": [
    "dist/"
  ],
  "scripts": {
    "server:prod": "vite --mode production",
    "server:dev": "vite --mode development",
    "build:prod": "tsc && vite build --mode production",
    "build:dev": "tsc && vite build --mode development",
    "preview": "vite preview",
    "prettier": "prettier . --write",
    "clean": "rimraf ./dist",
    "build:css": "node-sass src/ -o dist/esm/",
    "build": "npm run clean && tsc -p tsconfig.json && npm run build:css && rollup -c rollup.config.js",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@rolster/typescript-forms": "^4.0.2",
    "@rolster/typescript-utils": "^4.0.3",
    "lottie-react": "^2.4.0",
    "match-sorter": "^6.3.1",
    "object-path": "^0.11.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.62.1",
    "sort-by": "^0.0.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.21.0",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-typescript": "^11.1.3",
    "@rolster/styles-foundations": "^1.0.1",
    "@rolster/typescript-types": "^4.0.0",
    "@types/node-sass": "^4.11.4",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitejs/plugin-react-swc": "^3.3.1",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "node-sass": "^9.0.0",
    "prettier": "^2.8.8",
    "rollup-plugin-import-css": "^3.3.1",
    "rollup-plugin-swc": "^0.2.1",
    "typescript": "^5.0.2",
    "vite": "^4.3.2",
    "vite-tsconfig-paths": "^4.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rolster-developments/react-components.git"
  }
}
